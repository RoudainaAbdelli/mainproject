{% extends 'base.html.twig' %}

{% block title %}Coach Details{% endblock %}

{% block body %}
    <div class="header">Coach Profile</div>

    <div class="container">
        <h2>{{ coach.name }}</h2>
        <p><strong>Email:</strong> {{ coach.email }}</p>
        <p><strong>Speciality:</strong> {{ coach.speciality }}</p>

        <h3>Scheduled Sessions</h3>
        <table>
            <thead>
            <tr>
                <th>Session ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date & Time</th>
                <th>Participants</th>
            </tr>
            </thead>
            <tbody>
            {% for seance in coach.seances %}
                <tr>
                    <td>{{ seance.id }}</td>
                    <td>{{ seance.title }}</td>
                    <td>{{ seance.description }}</td>
                    <td>{{ seance.dateHeure|date('Y-m-d H:i') }}</td>
                    <td>
                        {% for participant in seance.participants %}
                            <li>{{ participant.name }}</li>
                        {% endfor %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No sessions found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
