{% extends 'base.html.twig' %}

{% block title %}Edit Seance{% endblock %}

{% block body %}
    <main class="container mt-5">
        <header class="text-center mb-4">
            <h1 class="display-5 text-primary">Edit Seance</h1>
            <p class="text-muted">Update the details of the selected seance below.</p>
        </header>

        <div class="card shadow p-4">
            {{ form_start(form) }}
            {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
            <button class="btn btn-primary mt-3 w-100">
                <i class="bi bi-pencil-square"></i> {{ button_label|default('Update') }}
            </button>
            {{ form_end(form) }}
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('seance_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            {{ include('seance/_delete_form.html.twig', {
                'attr': {'class': 'btn btn-danger'}
            }) }}
        </div>
    </main>
{% endblock %}
