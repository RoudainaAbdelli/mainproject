{% extends 'base.html.twig' %}

{% block title %}Seances{% endblock %}

{% block body %}
    <div class="header">Seances</div>

    <div class="container text-center">
        <a href="{{ path('seance_new') }}" class="create-new-btn">+ Create New</a>
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Duration (Minutes)</th>
                <th>Capacity</th>
                <th>Date & Time</th>
                <th>Salle</th>
                <th>Coach</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for seance in seances %}
                <tr>
                    <td>{{ seance.id }}</td>
                    <td>{{ seance.title }}</td>
                    <td>{{ seance.description }}</td>
                    <td>{{ seance.duration }}</td>
                    <td>{{ seance.capacity }}</td>
                    <td>{{ seance.dateHeure|date('Y-m-d H:i') }}</td>
                    <td>{{ seance.salle.name }}</td>
                    <td>{{ seance.coach.name }}</td>
                    <td>
                        <a href="{{ path('seance_edit', {'id': seance.id}) }}" class="action-btn btn-edit">Edit</a>
                        <a href="{{ path('seance_delete', {'id': seance.id}) }}" class="action-btn btn-delete"
                           onclick="return confirm('Are you sure you want to delete this seance?');">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">No seances found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: 'Arial', sans-serif;
        }
        .header {
            text-align: center;
            padding: 20px;
            background: #222;
            color: #6c63ff;
            font-size: 2.5rem;
            text-transform: uppercase;
            font-weight: bold;
        }
        table {
            background-color: #1e1e1e;
            border-collapse: collapse;
            width: 100%;
            margin: 20px auto;
        }
        th, td {
            text-align: center;
            padding: 15px;
            border: 1px solid #333;
        }
        th {
            background-color: #333;
            color: #6c63ff;
            text-transform: uppercase;
        }
        tr:nth-child(even) {
            background-color: #2a2a2a;
        }
        tr:hover {
            background-color: #444;
        }
        .action-btn {
            color: white;
            padding: 5px 10px;
            margin: 5px;
            border-radius: 5px;
        }
        .btn-edit {
            background-color: #28a745;
        }
        .btn-delete {
            background-color: #dc3545;
        }
        .create-new-btn {
            display: inline-block;
            background-color: #6c63ff;
            color: #fff;
            text-transform: uppercase;
            padding: 10px 20px;
            margin: 20px auto;
            text-align: center;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .create-new-btn:hover {
            background-color: #5048e5;
        }
    </style>
{% endblock %}
